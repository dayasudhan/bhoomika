<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:paddingLeft="10dp"

    android:paddingBottom="10dp"
    android:background="@drawable/list_background" android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Label Name"
        android:textColor="@color/title_text_color"
        android:id="@+id/address_label"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"

        android:layout_marginTop="3dp"
        android:layout_marginLeft="15dp"
        android:textSize="16sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Address"
        android:id="@+id/address_detail"
        android:textColor="@color/secondary_text_color"
        android:textSize="12sp"
        android:layout_alignTop="@+id/address_label"
        android:layout_alignBottom="@+id/edit"
        android:layout_toLeftOf="@+id/del"
        android:layout_toRightOf="@+id/address_label"
        android:layout_toEndOf="@+id/address_label" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Delete "
        android:textColor="#ffffff"
        android:id="@+id/del"
        android:background="@drawable/locationbuttonselector"
        android:enabled="true"
        android:focusable="true"
        android:clickable="true"
        android:longClickable="false"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Edit"
        android:textColor="#ffffff"
        android:id="@+id/edit"
        android:background="@drawable/locationbuttonselector"
        android:enabled="true"
        android:focusable="true"
        android:clickable="true"
        android:longClickable="false"
        android:layout_below="@+id/del"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>

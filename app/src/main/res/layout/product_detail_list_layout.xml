<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#ffffff"
    android:paddingRight="5dp"
    android:layout_width="match_parent" android:layout_height="wrap_content">
    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/product_detail_image_view"
        android:layout_marginLeft="10dp"
        android:background="@color/img_background"
        android:src="@drawable/knvl1"
        android:layout_centerVertical="true"

        />



    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="item name"
        android:textColor="@color/title_text_color"
        android:id="@+id/product_detail_name"
        android:textSize="16sp"

        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"

        android:layout_below="@+id/add_btn"
        android:layout_toEndOf="@+id/product_detail_image_view"
        android:layout_marginStart="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"

        android:id="@+id/approx_price_val"
        android:textColor="@color/secondary_text_color"
        android:textSize="14sp"
        android:layout_below="@+id/product_detail_name"
        android:layout_alignStart="@+id/product_detail_name" />




    <ImageView

        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/plus"
        android:gravity="center_horizontal|center_vertical"
        android:id="@+id/sub_btn"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true" />
    <ImageView

        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/minus"

        android:gravity="center_horizontal|center_vertical"
        android:id="@+id/add_btn"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/add_sub_val" />

    <TextView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:textSize="14sp"
        android:text="0"

        android:textColor="@color/text_view_grey"
        android:gravity="center_horizontal|center_vertical"
        android:id="@+id/add_sub_val"

        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/sub_btn" />


</RelativeLayout>

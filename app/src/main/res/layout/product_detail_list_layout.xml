<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#ffffff"
    android:paddingRight="5dp"
    android:layout_width="match_parent" android:layout_height="wrap_content">
    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/product_detail_image_view"
        android:layout_marginLeft="10dp"
        android:background="@color/img_background"
        android:layout_centerVertical="true"

        />



    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Vendor Name 1"
        android:textColor="@color/title_text_color"
        android:id="@+id/product_detail_name"
        android:textSize="20dp"

        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"

        android:layout_alignTop="@+id/product_detail_image_view"
        android:layout_toRightOf="@+id/product_detail_image_view"
        android:layout_marginTop="25dp"
        android:layout_toLeftOf="@+id/add_btn"
        android:layout_toStartOf="@+id/add_btn" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"

        android:id="@+id/approx_price_val"
        android:textColor="@color/secondary_text_color"
        android:textSize="15dp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/product_detail_name"
        android:layout_alignLeft="@+id/product_detail_name"
        android:layout_alignStart="@+id/product_detail_name" />




    <TextView

        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="-"

        android:textColor="@color/text_view_grey"
        android:textSize="16sp"
        android:gravity="center_horizontal|center_vertical"
        android:background="#ffffff"
        android:id="@+id/sub_btn"
        android:layout_below="@+id/add_sub_val"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <TextView

        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="+"
        android:textSize="16sp"
        android:textColor="@color/text_view_grey"
        android:background="#ffffff"
        android:gravity="center_horizontal|center_vertical"
        android:id="@+id/add_btn"

        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:textSize="14sp"
        android:text="0"

        android:textColor="@color/text_view_grey"
        android:gravity="center_horizontal|center_vertical"
        android:id="@+id/add_sub_val"
        android:background="#ffffff"
        android:layout_below="@+id/add_btn"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/add_btn"
        android:layout_alignStart="@+id/add_btn" />


</RelativeLayout>

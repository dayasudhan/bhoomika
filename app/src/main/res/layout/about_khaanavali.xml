<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="@drawable/aboutusbg">


    <!-- Name Label -->

    <!-- Email Label -->


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       >


        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text= "\t\t\n\t\t\t\t\t\t\t\tFeel the real taste of KRNATAKA.\n\t\tKhaanavali brings you the best food to \n\t\tyour doorstep at cheeper price."
                android:id="@+id/textView8"
            android:textSize="20dp"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="73dp"
            android:layout_above="@+id/facebook"
            android:layout_alignParentStart="true" />

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/facebook"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/facebook"
            android:scaleType="fitXY"

            android:onClick="onClick"
            android:clickable="true"/>

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/gmail"
            android:background="@drawable/gmail"
            android:scaleType="fitXY"
            android:layout_alignTop="@+id/facebook"
            android:layout_toEndOf="@+id/facebook"

            android:onClick="onClick"
            android:clickable="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="www.khaanavali.com"
            android:id="@+id/webPage"
            android:onClick="onCilck"
            android:clickable="true"
            android:layout_marginTop="157dp"
            android:textColor="@color/parrotgreen3"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/gmail" />

    </RelativeLayout>

</LinearLayout>
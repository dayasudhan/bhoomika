        android:textColor="@color/title_text_color"
        android:id="@+id/vendor_name"
        android:layout_alignTop="@+id/vendor_image_view"
        android:layout_toRightOf="@+id/vendor_image_view"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="15dp"
        android:textSize="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Hotel description comes here"
        android:id="@+id/vendor_speciality"
        android:textColor="@color/secondary_text_color"
        android:textSize="15dp"
        android:layout_marginTop="3dp"
        android:layout_below="@+id/vendor_name"
        android:layout_alignLeft="@+id/vendor_name"
        android:layout_alignStart="@+id/vendor_name" />

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/vendor_speciality"
        android:layout_toRightOf="@+id/vendor_image_view"
        android:layout_alignParentRight="true"
        android:layout_alignLeft="@+id/vendor_name"
        android:layout_alignStart="@+id/vendor_name"
        android:layout_marginTop="9dp"
        android:orientation="horizontal" >

        <TextView

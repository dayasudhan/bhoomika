<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:paddingLeft="10dp"

    android:paddingBottom="10dp"
    android:background="@drawable/hotelinfo_background" android:layout_height="match_parent">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Rating"
        android:textColor="@color/title_text_color"
        android:id="@+id/vendor_name_info"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="3dp"
        android:textSize="15dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Hotel description comes here"
        android:id="@+id/vendor_speciality_info"
        android:textColor="@color/secondary_text_color"
        android:textSize="12dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:layout_below="@+id/vendor_name_info"
        android:layout_alignLeft="@+id/vendor_name_info"
        android:layout_alignStart="@+id/vendor_name_info" />

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignLeft="@+id/vendor_name_info"
        android:layout_alignStart="@+id/vendor_name_info"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/vendor_speciality_info">

        <TextView
            android:id="@+id/vendor_rating_info"
            android:layout_width="0dp"
            android:layout_weight=".50"
            android:textSize="12dp"
            android:layout_height="wrap_content"
            android:textColor="@color/third_text_color"
            android:text="Rating " />

        <TextView
            android:id="@+id/vendor_delivery_time_info"
            android:layout_width="0dp"
            android:layout_weight=".50"
            android:layout_height="wrap_content"

            android:textSize="12dp"
            android:textColor="@color/third_text_color"
            android:text="60 minutes" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:textColor="@color/third_text_color"
            android:text="Small Text"
            android:id="@+id/delievercharge" />

    </LinearLayout>

